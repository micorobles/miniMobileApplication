<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/result_design"
    android:elevation="8dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tvProf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif"
            android:text="Antonio C Co. MBA"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:text="IT3 203 - Data Integration and Security"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivProfIMG"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="170dp"
            android:padding="5dp"
            app:shapeAppearanceOverlay="@style/circular"
            app:srcCompat="@drawable/robles"
            app:strokeColor="@color/greenDark"
            app:strokeWidth="1dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <TextView
            android:id="@+id/tvAveScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="sans-serif"
            android:text="Average score:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <RatingBar
            android:id="@+id/rbAveScore"
            style="@style/customRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5"
            tools:layout_editor_absoluteX="235dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/tvAveEffort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:text="Average effort Exerted:"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <RatingBar
            android:id="@+id/rbAveEffort"
            style="@style/customRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5"
            tools:layout_editor_absoluteX="235dp"
            tools:layout_editor_absoluteY="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="10dp">

        <TextView
            android:id="@+id/tvComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:text="Your comment: "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/etComment"
            android:layout_width="match_parent"
            android:background="@drawable/comment_design"
            android:layout_height="40dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:enabled="false"
            android:text="I dont like this professor at all."
            android:textSize="15dp"
            android:lines="2"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>



</LinearLayout>